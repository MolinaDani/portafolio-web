---
import Layout from "../layouts/RootLayout.astro";
import MainSection from "../components/MainSection.astro";
import ExperienceSection from "../components/ExperienceSection.astro";
import ProjectsSection from "../components/ProjectsSection.jsx";
---

<Layout title="Daniel Molina - Portafolio">
  <main>
    <MainSection />
    <div class="line"></div>
    <ExperienceSection />
    <ProjectsSection client:load />
  </main>
  <style>
    main {
      width: 100%;
      margin: auto;
      background-color: transparent;
    }

    .line {
      width: var(--max-page-width);
      margin: auto;
      height: 2px;
      margin-top: 60px;
      background: linear-gradient(
        to right,
        transparent,
        var(--border-buttons),
        transparent
      );
    }
  </style>
</Layout>
