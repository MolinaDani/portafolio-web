---
import Layout from "@/layouts/RootLayout.astro";
import MainSection from "@/sections/MainSection.astro";
import ExperienceSection from "@/sections/ExperienceSection.astro";
import ProjectsSection from "@/sections/ProjectsSection.jsx";
import TechnologiesSection from "@/sections/TechnologiesSection.astro";
import ContactSection from "@/sections/ContactSection.astro";
---

<Layout title="Daniel Molina - Portafolio">
  <main>
    <MainSection />
    <div class="line"></div>
    <ExperienceSection />
    <ProjectsSection client:load />
    <TechnologiesSection />
    <div class="line"></div>
    <ContactSection />
  </main>
  <style>
    main {
      width: 100%;
      margin: auto;
      background-color: transparent;
    }

    .line {
      width: var(--max-page-width);
      margin: auto;
      height: 2px;
      margin-top: 60px;
      background: linear-gradient(
        to right,
        transparent,
        var(--border-buttons),
        transparent
      );
    }
  </style>
</Layout>
