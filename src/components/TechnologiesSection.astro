---
import TitleSections from "./TitleSections.astro";
import data from "../static/technologies_data.json";
---

<section id="technologies">
  <TitleSections title="TecnologÃ­as:" center={false} />
  <div class="technologies-container">
    {
      data.map((item, i) => (
        <div class="technologie-item" style={`--color: ${item.color};`}>
          {typeof item.image === "object" ? (
            <img src={item.image.dark} alt={item.label} />
          ) : (
            <img src={item.image} alt={item.label} />
          )}
          <span>{item.label}</span>
        </div>
      ))
    }
  </div>
</section>
<style>
  section {
    width: var(--max-page-width);
    margin: auto;
    padding-top: 70px;
    /* margin-top: 70px; */
  }

  .technologies-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 10px;
  }

  .technologie-item {
    position: relative;
    display: flex;
    justify-content: center;
    cursor: default;
    width: 150px;
    height: 150px;
  }

  .technologie-item::before {
    content: "";
    position: absolute;
    top: 0px;
    left: 50%;
    transform: translateX(-50%);
    width: 130px;
    height: 130px;
    background: radial-gradient(var(--color) 25%, transparent, transparent);
    transition: all ease-in-out 300ms;
    opacity: 0;
  }

  .technologie-item img {
    margin-top: 35px;
    width: 80px;
    height: 80px;
    scale: 0.9;
    transition: all ease-in-out 200ms;
    filter: grayscale(30%);
  }

  .technologie-item span {
    display: block;
    width: 100%;
    position: absolute;
    top: 100px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    color: var(--text-primary);
    transition: all ease-in-out 200ms;
    opacity: 0;
  }

  .technologie-item:hover img {
    margin-top: 25px;
    scale: 1;
    filter: grayscale(0);
  }

  .technologie-item:hover span {
    top: 115px;
    opacity: 100%;
  }

  .technologie-item:hover::before {
    opacity: 100%;
  }
</style>
