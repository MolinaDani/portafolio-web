<style>
  footer {
    width: var(--max-page-width);
    margin: auto;
    padding: 40px 0px;
    display: flex;
    flex-direction: column;
    gap: 18px;
    align-items: center;
    color: var(--text-secondary);
    font-size: 0.85rem;
  }

  footer div {
    display: flex;
    align-items: center;
    flex-direction: column-reverse;
    gap: 6px;
    width: 100%;
  }

  footer div .share-container ul {
    display: flex;
    align-items: center;
    justify-content: start;
    gap: 10px;
  }

  footer .share-container {
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 6px;
  }

  footer div .share-container ul {
    list-style: none;
  }

  footer div .share-container ul li a {
    text-decoration: none;
    border: 1px solid transparent;
    border-radius: 5px;
    padding: 6px 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    transition: all ease-in-out 150ms;
  }

  footer div .share-container ul li a:hover {
    border-color: var(--text-secondary);
  }

  footer span {
    text-align: center;
  }

  footer div nav {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  footer div nav a {
    text-decoration: none;
    color: var(--text-secondary);
    padding: 10px 16px;
  }

  @media (min-width: 768px) {
    footer {
      font-size: 0.95rem;
    }

    footer div {
      flex-direction: row;
      justify-content: space-between;
      gap: 0px;
    }

    footer .share-container {
      flex-direction: row;
      gap: 10px;
      justify-content: start;
    }
  }
</style>
