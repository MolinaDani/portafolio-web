---
import { FaCode } from "react-icons/fa6";
import TitleSections from "./TitleSections.astro";
import data from "../static/experience_data.json";
---

<section>
  <TitleSections title="Experiencia laboral:" />

  <div class="experiences-container">
    <ul class="experiences-list">
      {
        data.map((item) => (
          <li>
            <span class="icon">
              <FaCode size={"30px"} />
            </span>
            <div class="experience-data">
              <h3>{item.title}</h3>
              {item.company && <h4>{item.company}</h4>}
              <span>
                {item.from} - {item.to}
              </span>
              <p>{item.description}</p>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  section {
    width: var(--max-page-width);
    margin: auto;
    margin-top: 30px;
    margin-bottom: 20px;
  }

  .experiences-container {
    padding: 0px 20px;
  }

  .experiences-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .experiences-list li {
    display: flex;
    gap: 30px;
    opacity: 0;
    transform: translateX(-80px);
    transition: all ease-in-out 300ms;
  }

  .experiences-list li.intersected {
    transform: translateX(0);
    opacity: 100%;
  }

  .icon {
    display: block;
    min-width: 35px;
    color: var(--icons-cian);
  }

  .experience-data {
    display: flex;
    flex-direction: column;
  }

  .experience-data h3 {
    font-family: "Poppins-Regular";
    letter-spacing: 1px;
    font-size: 1.4rem;
    line-height: 10px;
    margin-bottom: 12px;
  }

  .experience-data h4 {
    font-family: "Poppins-Regular";
    font-size: 1.1rem;
    color: var(--text-cian);
  }

  .experience-data span {
    font-size: 0.9rem;
    color: var(--border-buttons);
    margin-bottom: 10px;
  }

  .experience-data p {
    font-size: 1.1rem;
    width: 90%;
  }
</style>

<script>
  import createIntersectionObserver from "../functions/createIntersectionObserver.js";

  const observer = createIntersectionObserver({
    threshold: 1,
    rootMargin: "-30px 0px",
  });
  const elements = document.querySelectorAll(".experiences-list li");

  elements.forEach((e) => {
    observer.observe(e);
  });
</script>
