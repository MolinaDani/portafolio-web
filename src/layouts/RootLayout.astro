---
import "@fontsource-variable/dm-sans";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import "@fontsource/poppins/800.css";

import HeaderImage from "../components/HeaderImage.astro";
import Header from "../components/Header.astro";
import StarsLayer from "../components/StarsLayer.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio web de Daniel Molina." />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=0, initial-scale=1"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <StarsLayer />
    <HeaderImage />
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    border: 0;
  }

  :root {
    --text-primary: white;
    --text-secondary: #d3d3d3;
    --text-cian: #1e90ff;
    --text-green: #2be02b;
    --background: #08010e;
    --background-transparent: #08010ede;
    --background-projects-list: #14131a;
    --background-projects-list-hover: #272630;
    --scrollbar-color: #3a3947;
    --border-buttons: gray;
    --max-page-width: 100%;
    --icons-cian: #0cd5f8;
    --background-alert: #37363d;
  }

  @media (min-width: 768px) {
    :root {
      --max-page-width: 672px;
    }
  }

  @media (min-width: 1024px) {
    :root {
      --max-page-width: 896px;
    }
  }

  body {
    min-height: 100dvh;
    overflow-x: hidden;
    width: 100dvw;
    background-color: var(--background);
    font-family: "DM Sans Variable", sans-serif;
  }

  html {
    scroll-behavior: smooth;
  }

  p {
    text-wrap: pretty;
    color: var(--text-secondary);
    font-weight: 400;
  }

  h1,
  h2,
  h3,
  h4 {
    text-wrap: balance;
    color: var(--text-primary);
    font-family: "Poppins", sans-serif;
  }

  img,
  svg {
    max-width: 100%;
    height: auto;
  }

  .banner {
    width: 100%;
    height: auto;
  }
</style>
